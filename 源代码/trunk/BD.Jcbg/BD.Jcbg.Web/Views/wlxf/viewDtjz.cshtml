<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <script src="/static/lib/jquery.js"></script>
    <style>
        body,
        html {
            background-color: #fafafa;
            margin: 0;
            user-select: none;
            position: relative;
            height: 100%;
            width: 100%;
        }

        .check_wrap {
            padding: 15px;
            box-sizing: border-box;
            height: 100%;
            display: flex;
            flex-direction: column;
        }

        .lab_wrap label {
            display: block;
            margin: 10px 0;
            cursor: pointer;
            background-color: #ffffff;
            box-shadow: 0 6px 10px 0 rgba(95, 101, 105, 0.15);
            border-radius: 5px;
            padding: 15px 10px;
        }

        .checked {
            border: 1px solid #1989fa;
            color: #1989fa;
        }

        .my_ck {
            transform: scale(1.3);
        }

        .my_btn {
            display: inline-block;
            line-height: 1;
            white-space: nowrap;
            cursor: pointer;
            background: #fff;
            border: 1px solid #dcdfe6;
            color: #606266;
            -webkit-appearance: none;
            text-align: center;
            box-sizing: border-box;
            outline: none;
            margin: 0;
            transition: .1s;
            font-weight: 500;
            -moz-user-select: none;
            -webkit-user-select: none;
            -ms-user-select: none;
            padding: 12px 20px;
            font-size: 14px;
            border-radius: 4px;
            color: #fff;
            background-color: #409eff;
            border-color: #409eff;
            width: 30%;
        }

            .my_btn:hover {
                background: #66b1ff;
                border-color: #66b1ff;
                color: #fff;
            }

        .footer_bar {
            width: 100%;
            background-color: #ffffff;
            /* position: fixed; */
            bottom: 0;
            left: 0;
            padding: 10px;
            box-sizing: border-box;
            /* box-shadow: 0 6px 10px 0 rgba(95, 101, 105, 0.15); */
        }

        .lab_wrap {
            flex: 1;
            overflow: auto;
        }

        .footer_bar {
            flex: 0 0 60px;
            display: flex;
            justify-content: space-between;
            align-items: center;
        }
    </style>
</head>

<body>
    <div class="check_wrap">
        <div class="lab_wrap">
        </div>
        <div class="footer_bar">
            <div class="ck_all">
                <label>
                    <input type="checkbox" id="J_ck_all">
                    <span>全选</span>
                </label>
            </div>
            <button type="button" class="my_btn">
                保存
            </button>
        </div>
    </div>
</body>
<script>
	var fxbaid = GetQueryString('fxbaid')
	var serialno = GetQueryString('serialno')
	var typebh = GetQueryString('typebh')
	var d = []
	$.ajax({
		url: "/wlxf/getDtjzList?fxbaid=" + fxbaid + "&serialno=" + serialno + "&typebh=" + typebh,
		type: "post",
		dataType: "json",
		async: false,
		success: function (res) {
			var str = ""
			d = res.rows

			res.rows.forEach(function (e) {
				str += `
					<label class="${e.isselect=='1'?'checked':''}">
						<input ${e.isselect=='1'?'checked':''} type="checkbox" class="my_ck" data-recid="${e.recid}">
						<span>${e.fgcmc}</span>
					</label>
				`
			})
			$('.lab_wrap').html(str).on('click', '.my_ck', function (e) {
				var checked = $(this).is(':checked')
				$(this).closest('label').toggleClass('checked')
				var recidsArr = []
				$('.checked').each(function () {
					recidsArr.push($(this).find('.my_ck').attr('data-recid'))
				})
				if(d.length==recidsArr.length){
					$('#J_ck_all').prop('checked',true)
				}else{
					$('#J_ck_all').prop('checked',false)
				}
				// console.log(recidsArr.length);
			})
			if(d.length!=0&&d.length==d.filter(function(e){return e.isselect=='1'}).length){
				$('#J_ck_all').prop('checked',true)
			}
		}
	})
	$('#J_ck_all').on('click', function () {
		var checked = $(this).is(':checked')
		$('.my_ck').each(function () {
			$(this).prop('checked', checked)
			if (checked) {
				$(this).closest('label').addClass('checked')
			} else {
				$(this).closest('label').removeClass('checked')
			}
		})
	})
	$('.my_btn').on('click', function () {
		var recidsArr = []
		$('.checked').each(function () {
			recidsArr.push($(this).find('.my_ck').attr('data-recid'))
		})
		if (recidsArr.length == 0) {
		    return parent.layer.alert('选项不能为空！');
		}
		$.ajax({
			url: "/wlxf/saveDtjz",
			type: "post",
			data: {
				fxbaid: fxbaid,
				serialno: serialno,
				typebh: typebh,
				recids: recidsArr.join(',')
			},
			dataType: "json",
			success: function (res) {
				if (res.code == 0) {
					parent.layer.alert('保存成功', function () {
						parent.layer.closeAll();
					})
				} else {
					parent.layer.msg(res.msg, function () {
						parent.layer.closeAll();
					})
				}
			}
		})
	})

	function GetQueryString(name) {
		var reg = new RegExp("(^|&)" + name + "=([^&]*)(&|$)");
		var r = window.location.search.substr(1).match(reg);
		if (r != null) return unescape(r[2]);
		return null;
	}
</script>

</html>