@{
    Layout = "~/Views/User/_easyuilayout.cshtml";
}

<script language="javascript" type="text/javascript">
	function Open_Dialog() {
		$('#maindlg').dialog({
			collapsible: false,
			minimizable: false,
			maximizable: false,
			resizable: false,
			shadow: true,
			modal: false,
			closable: false,
			buttons: [{
			    text: '新增',
			    iconCls: 'icon-ok',
			    handler: function () {
			        submitForm();
			    }
			}]
		});
	}

	var g_users = null;

	$(function () {
		initDs();

		$("#hostuser").combobox({
			valueField: "Key",
			textField: "Value",
			mode: "local",
			editable: true,
			panelHeight: 100,
			data: g_users
		});

		Open_Dialog();
	});
	function initDs() {
		try {
			$.ajax({
				type: "POST",
				url: "/user/GetKqjNotInUsers",
				dataType: "json",
				async: false,
				success: function (data) {
					g_users = new Array();
					for (var i = 0; i < data.length; i++) {
					    g_users[g_users.length] = data[i];
					}
				},
				complete: function (XMLHttpRequest, textStatus) {
				    $("body").unmask();
				},
				beforeSend: function (XMLHttpRequest) {
					$("body").mask("正在加载用户数据...");
				}
			});			
		} catch (e) {
			$.messager.alert('加载用户数据异常', e.message, 'warning');
		}
	}
	function submitForm() {

		$("#formmain").form('submit', {
		    url: "/user/doaddkqjuser?username=" + encodeURIComponent($("#hostuser").combobox('getValue')),
			onSubmit: function (param) {
				var ret = false;
				try {
					var hostuser = $("#hostuser").combobox('getValue');
					var find = false;
					for (var i = 0; i < g_users.length; i++) {
						if (g_users[i].Key == hostuser) {
							find = true;
							break;
						}
					}
					if (!find) {
						$.messager.alert('提示', "请选择要添加的用户账户", 'info');
						return ret;
					}
					$("#maindlg").mask("正在保存……");
					ret = true;
				}
				catch (err) {
					ret = false;
					$.messager.alert('提示', err, 'info');
				}
				return ret;
			},
			success: function (data) {
				try {
					$("#maindlg").unmask();
					var data = eval('(' + data + ')');
					var code = data.code;
					var msg = data.msg;
					if (msg == "") {
						if (code == 0)
							msg = "新增成功！";
						else
						    msg = "新增失败！";
					}					
					$.messager.alert('提示', msg, 'info');
					parent.layer.closeAll();
				}
				catch (err) {
					$.messager.alert('提示', err, 'info');
				}
			}
		});
	}
	
</script>

<div id="maindlg" style="padding:20px;width:300px;height:140px;" title="新增考勤人员"> 
<form id="formmain" method="post" action="">
	
	选择考勤人员：　　
	<input id="hostuser" name="hostuser" />
</form>
</div> 


