        </div>
        <!-- 查询条件 -->
        <div id="conditionDiv" style="overflow: auto">
        </div>
        <!-- 工具栏 -->
        <div id="toolbarDiv" class="btn-group">
        </div>
        <!-- 列表 -->
        @{ Form form = ViewData["form"] as Form; }
        @{ IList<FormZdzd> zdzdList = ViewData["zdzd"] as IList<FormZdzd>; }

        <div id="dataDiv">
            <div id="jqxgrid"></div>
        </div>
        </form>
