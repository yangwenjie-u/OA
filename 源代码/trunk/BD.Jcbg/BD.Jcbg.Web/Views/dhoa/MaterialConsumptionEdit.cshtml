        $("#mainView .save").click(function () {
            var matBH = $('#materialspec').find("option:selected").attr("data-bh");
            var matId = $("#materialname option:selected").val();
            var matName = $("#materialname option:selected").text();
            var specId = $("#materialspec option:selected").val();
            var specName = $("#materialspec option:selected").text();
            var unitName = "";
            var price = $("#price").val();
            var purchasePrice = $("#purchasePrice").val();
            var quantity = $("#quantity").val();
            var technicalRequirement = $("#technicalrequirement").val();
            var supplier = $("#supplier").val();
            var manufacturer = $("#manufacturer").val();
            var purpose = $("#purpose").val();

            if (matId == 0) {
                layer.msg('请选择材料', {
                    icon: 2,
                    time: 2000
                });
                return;
            }

            if (materialspecCount != 0 && unitId == 0) {
                layer.msg('请选择规格', {
                    icon: 2,
                    time: 2000
                });
                return;
            }
            if (price.length==0) {
                layer.msg('请输入价格', {
                    icon: 2,
                    time: 2000
                });
                return;
            }

            if (quantity.length == 0) {
                layer.msg('请输入数量', {
                    icon: 2,
                    time: 2000
                });
                return;
            }

            var obj = {
                recid: recordRecid,
                type: recordType,
                matBH: matBH,
                matId: matId,
                matName: matName,
                specId: specId,
                specName: specName,
                unitName: unitName,
                price: price,
                purchasePrice: purchasePrice,
                quantity: quantity,
                technicalRequirement: technicalRequirement,
                supplier: supplier,
                manufacturer: manufacturer,
                purpose: purpose
            }

            ajaxTpl('/dhoa/MaterialConsumptionModify', obj, function (data) {
                if (data.code == '0') {
                    layer.alert('保存成功');
                    try {
                        setTimeout(function () {
                            parent.layer.closeAll();
                        }, 1000)
                    }
                    catch (e) {
                    }
                }
                else {

                    layer.msg(data.msg, {
                        icon: 2,
                        time: 2000
                    });
                }
            });
        });
