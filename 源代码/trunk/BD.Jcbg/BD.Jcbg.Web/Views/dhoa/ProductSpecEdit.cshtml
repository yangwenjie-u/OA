<!DOCTYPE html>
<html>

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title></title>
    <link type="text/css" rel="Stylesheet" href="/static/common/reset.css" />
    <link type="text/css" rel="Stylesheet" href="/static/oa/css/load.css" />
    <style>
        .main-view {
            text-align: left;
        }

        .m-role {
            width: 100%;
        }

            .m-role .xb {
                width: 20px;
                height: 20px;
                margin-right: 20px;
            }

            .m-role .sfsyr {
                width: 20px;
                height: 20px;
                margin-right: 20px;
            }

            .role-list .m-role input,
            .m-role select {
                width: 90%;
            }

        .role-line {
            width: 60%;
            display: inline-block;
            text-align: center;
            height: 30px;
            line-height: 30px;
        }

        .m-role span {
            text-align: center;
        }
       

        .role-list .checkbox {
            width: 16px;
            height: 16px;
        }

        .role-list {
            width: 90%;
        }

        #mainView {
            display: inline-block;
            margin: 0px 10%;
            padding-top: 20px;
            box-sizing: border-box;
        }

        #selectRole span {
            margin-top: 5px;
            background: #5167D7;
            color: white;
            border-radius: 5px;
            cursor: pointer;
        }

        .m-role input, .m-role select {
            width: 60%;
        }
    </style>
</head>

<body>
    <div id="mainView" class="main-view">
        <div class="m-role" style="display: none">
            <label>
                <span>编号</span>
                <input type="text" name="id" id="id" />
            </label>
        </div>
        <div class="m-role">
            <label>
                <span>规格型号</span>
                <input type="text" name="specName" id="specName" />
            </label>
        </div>
        <div class="m-role">
            <span>状态</span>
            <select id="specStatus">
                <option value="1">启用</option>
                <option value="0">禁用</option>
            </select>
        </div>

        <div class="save" style=" border: 0px; float: right; display: inline-flex ;margin:auto">
            <span class="btn" id="btn_save">保存</span>
        </div>
    </div>
    <script src="/static/lib/jquery-2.0.3.min.js"></script>
    <script src="/static/common/common.js"></script>
    <script src="/static/lib/layer/layer.js"></script>
    <script>
        var id = "@ViewBag.Id";
        var productRecid = "@ViewBag.ProductRecid";

        $(function () {

            if (id) {
                $('#id').val(id);
                $('#specName').val('@ViewBag.SpecName');
                $('#specStatus').val('@ViewBag.SpecStatus');
            }

        })
        $("#mainView .save").click(function () {

            var specName = $("#specName").val();
            var productName = $("#productName").val();
            var status = $("#specStatus").val();

            if (productName == 0) {
                layer.msg('请输入产品名称', {
                    icon: 2,
                    time: 2000
                });
                return;
            }

            var obj = {
                specId: id,
                productRecid: productRecid,
                specName: specName,
                specStatus: status
            }

            ajaxTpl('/dhoa/ProductSpecUpdate', obj, function (data) {
                if (data.code == '0') {
                    layer.alert('保存成功');
                    try {
                        setTimeout(function () {
                            parent.layer.closeAll();
                        }, 1000)
                    }
                    catch (e) {
                    }
                }
                else {
                    layer.msg(data.msg, {
                        icon: 2,
                        time: 2000
                    });
                }
            });
        });

    </script>
</body>

</html>